<% include partials/header %>

<div class="ui container segment">
	<div class="ui items">
		<div class="item">
			<div class="ui small image">
				<img src="<%= story.image%>">
			</div>
			<div class="content">
				<div class="header"><%=story.title%></div>
				<div class="meta"><%= story.author%></div>
				<div class="description"><%=story.plot%></div>
				<div class="meta"><%=story.entered.toDateString()%></div>
				<div class="bottom aligned content">
					<a class="ui orange button" href="/index/<%=story._id%>/edit">Edit</a>
					<form action="/index/<%=story._id%>?_method=DELETE" method="POST" class="ui form sform">
						<button class="ui red button">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<% include partials/footer %>